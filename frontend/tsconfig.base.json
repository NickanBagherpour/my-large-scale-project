{
    "compileOnSave": false,
    "compilerOptions": {
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": false,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@oxygen/client": ["libs/client/src/index.ts"],
            "@oxygen/hooks": ["libs/hooks/src/index.ts"],
            "@oxygen/layouts": ["libs/layouts/src/index.ts"],
            "@oxygen/mockify": ["libs/mockify/src/index.ts"],
            "@oxygen/reusable-components": [
                "libs/reusable-components/src/index.ts"
            ],
            "@oxygen/storybook-host": ["libs/storybook-host/src/index.ts"],
            "@oxygen/translation": ["libs/translation/src/index.ts"],
            "@oxygen/types": ["libs/types/src/index.ts"],
            "@oxygen/ui-kit": ["libs/ui-kit/src/index.ts"],
            "@oxygen/utils": ["libs/utils/src/index.ts"],
            "@oxygen/widgets/client-creation-widget": [
                "libs/widgets/client-creation-widget/src/index.ts"
            ],
            "@oxygen/widgets/client-list-widget": [
                "libs/widgets/client-list-widget/src/index.ts"
            ],
            "@oxygen/widgets/create-new-client-widget": [
                "libs/widgets/create-new-client-widget/src/index.ts"
            ],
            "@oxygen/widgets/service-management-widget": [
                "libs/widgets/service-management-widget/src/index.ts"
            ],
            "@oxygen/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
