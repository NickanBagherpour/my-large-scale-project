{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@oxygen-portal/client": [
        "libs/client/src/index.ts"
      ],
      "@oxygen-portal/hooks": [
        "libs/hooks/src/index.ts"
      ],
      "@oxygen-portal/translation": [
        "libs/translation/src/index.ts"
      ],
      "@oxygen-portal/types": [
        "libs/types/src/index.ts"
      ],
      "@oxygen-portal/ui-kit": [
        "libs/ui-kit/src/index.ts"
      ],
      "@oxygen-portal/utils": [
        "libs/utils/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
