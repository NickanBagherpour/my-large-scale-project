{
    "$schema": "https://json-schema.org/schema",
    "$id": "widget-g",
    "title": "",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Widget name",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What's the title of your new widget?"
        },
        "portalName": {
            "type": "string",
            "description": "Select the type of portal",
            "enum": ["backoffice-portal", "business-portal", "customer-portal"],
            "x-prompt": "Please select the portal for this widget:"
        }
    },
    "required": ["name", "portalName"]
}
